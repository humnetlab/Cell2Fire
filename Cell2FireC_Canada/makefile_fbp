# Define compiler and flags
CXX = g++
CC = gcc
CXXFLAGS = -std=c++17 -Wall -g -I/opt/homebrew/include
CFLAGS = -Wall -g

# Define targets and sources
TARGET = FBP2
CPP_SOURCES = FBP2.cpp ReadCSV.cpp
C_SOURCES = FBPfunc5_NoDebug.c
OBJECTS = $(CPP_SOURCES:.cpp=.o) $(C_SOURCES:.c=.o)

# Default target
all: $(TARGET)

# Link the executable
$(TARGET): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(TARGET)

# Compile C++ source files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Compile C source files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean object files and executable
clean:
	rm -f $(OBJECTS) $(TARGET)
